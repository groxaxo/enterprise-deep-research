# Example .env file for fully local Enterprise Deep Research setup
# Copy this to .env and customize as needed

# ==========================================
# Local LLM Configuration (Ollama Example)
# ==========================================

# Provider must be set to "openai" to use OpenAI-compatible endpoints
LLM_PROVIDER=openai

# Model name must match what's available in your local LLM server
# For Ollama, use: ollama list
LLM_MODEL=llama3.1:8b

# Dummy API key works for local endpoints that don't require authentication
OPENAI_API_KEY=dummy-key

# Point to your local OpenAI-compatible endpoint
# Ollama default: http://localhost:11434/v1
# vLLM default: http://localhost:8000/v1
OPENAI_BASE_URL=http://localhost:11434/v1

# Temperature for model responses (0 = deterministic, 1 = creative)
# Default: 0 for consistent agent behavior
OPENAI_TEMPERATURE=0

# ==========================================
# Search Configuration
# ==========================================

# Search API to use
SEARCH_API=tavily

# Tavily API key (required for web search)
# Get your key at: https://tavily.com
TAVILY_API_KEY=your-tavily-key-here

# Note: For fully local setup, you can implement SearXNG integration
# See LOCAL_SETUP.md for instructions

# ==========================================
# Research Configuration
# ==========================================

# Maximum number of research loops before finalizing
MAX_WEB_RESEARCH_LOOPS=3

# Whether to fetch full page content (more context, slower)
FETCH_FULL_PAGE=True

# ==========================================
# Telemetry Configuration (DISABLED)
# ==========================================

# Disable LangSmith tracing for privacy
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=""
LANGCHAIN_PROJECT=""

# Disable OpenTelemetry SDK
OTEL_SDK_DISABLED=true

# ==========================================
# Activity Generation Configuration
# ==========================================

# Enable detailed activity descriptions during research
ENABLE_ACTIVITY_GENERATION=true

# Activity verbosity level: none, low, medium, high
ACTIVITY_VERBOSITY=medium

# Use the same local LLM for activity generation
ACTIVITY_LLM_PROVIDER=openai
ACTIVITY_LLM_MODEL=llama3.1:8b

# ==========================================
# Optional: API Keys (Leave empty for local-only)
# ==========================================

# E2B API key for code execution sandboxing
E2B_API_KEY=""

# Firecrawl API key for enhanced web scraping
FIRECRAWL_API_KEY=""

# Jina API key for document processing
JINA_API_KEY=""

# Scrapybara API key for advanced scraping
SCRAPYBARA_API_KEY=""

# Cloud provider keys (not needed for local setup)
ANTHROPIC_API_KEY=""
GROQ_API_KEY=""
GOOGLE_CLOUD_PROJECT=""
SAMBNOVA_API_KEY=""
